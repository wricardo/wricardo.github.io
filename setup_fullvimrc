if [ ! -d  ~/.vim/bundle/ ]; then
    echo "Creating ~/.vim/bundle"
    mkdir -p ~/.vim/bundle/
fi
if [ ! -d  ~/.vim/bundle/Vundle.vim ]; then
    echo "Installing Vundle"
    git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim
fi

echo "Installing vimrc configs"
curl -s wricardo.github.io/vimrc_base > ~/.wricardorc
curl -s wricardo.github.io/vimrc_mappings > ~/.wricardorc_mappings
curl -s wricardo.github.io/vimrc_configs > ~/.wricardorc_configs
curl -s wricardo.github.io/vimrc_golang >> ~/.wricardorc_configs

echo "All done! Now just run the following:"
echo "echo \"so ~/.wricardorc\" > ~/.vimrc"
